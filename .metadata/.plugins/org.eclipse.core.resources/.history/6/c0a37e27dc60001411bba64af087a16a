<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="cn.gyyx.test.xuguochun.dao.IUserDAO">
  	<select id="selectByAccount" parameterType="String" resultType="UserInfo">
  		select * from game_person where account=#{account}
  	</select>
  	
  	<sql id="user">code,account,passwd</sql>
  	
  	<select id="selectByAccounts" resultMap="userResultMap">
       SELECT 
       <include refid="user"/>
       FROM game_person
       <where>
			<if test="array != null">
				account in
				<foreach item="item" open="(" close=")" separator=","
					collection="array">
					#{item}
				</foreach>
			</if>
		</where>
	</select>
	<resultMap type="UserInfo" id="userResultMap">
		<result property="password" column="passwd" />
	</resultMap>
  </mapper>